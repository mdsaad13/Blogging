@{
    ViewBag.Title = "Home";
}

    <div class="row">
        @{
            for (int i = 0; i <= 10; i++)
            {
                <div class="col-lg-4 col-6">
                    <div class="card card-info card-outline elevation-3">
                        <div class="card-body">
                            <img src="https://makeawebsitehub.com/wp-content/uploads/2017/03/examples-of-blog.jpg" class="img-fluid" />
                            <hr />
                            <h4>Examples of Blogs – Inspiration for New Bloggers</h4>
                            <p class="text-gray text-sm">
                                <i class="fas fa-clock"></i>
                                Published on: February 21st 2020
                            </p>
                            <hr />
                            <div class="row text-center text-sm">
                                <div class="col">
                                    <i class="fas fa-thumbs-up"></i> 30
                                </div>
                                <div class="col">
                                    <i class="fas fa-eye"></i> 30
                                </div>
                                <div class="col">
                                    <i class="fas fa-comments"></i> 30
                                </div>
                            </div>
                            <hr />
                            <p class="card-text text-sm">
                                Some quick example text to build on the card title and make up the bulk of the card's
                                content...
                            </p>
                        </div>
                        <a href="@Url.Action("Index","Blog")">
                            <div class="card-footer text-center">
                                View Full Blog
                            </div>
                        </a>
                    </div>
                </div>
            }
        }


    </div>