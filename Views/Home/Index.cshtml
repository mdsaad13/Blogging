@model IEnumerable<Blogging.Models.AllBlogsModel>
@{
    ViewBag.Title = "Home";
}

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-12">
            <div class="card card-outline elevation-3" style="margin-top: 26px;border-bottom: 3px solid #17a2b8;">
                <div class="card-body">
                    @if (item.HasImages)
                    {
                        <img src="~/Images/Blog/@item.BlogImg" class="img-fluid img-rounded elevation-3 card-img-top" style="margin-top: -42px;" />
                        <hr />
                    }

                    @if (item.Freatured)
                    {
                        <span class="badge bg-gradient-gray-dark float-left">
                            <i class="fas fa-star"></i>&nbsp;
                            FEATURED
                        </span>
                    }
                    <span class="badge text-dark float-right">
                        <i class="fas fa-tags"></i>&nbsp;
                        @item.CatName
                    </span>
                    <div class="clearfix"></div>
                    <h4>@item.Title</h4>
                    <div class="text-gray text-sm row">
                        <div class="col-12">
                            <a href="@Url.Action("ViewProfile","Account", new { Username = item.UniqueUserName })">
                                @if (item.UserImg != null)
                                {
                                    <img src="~/Images/UserProfiles/@item.UserImg" class="img-circle" style="height:2rem" alt="@item.UniqueUserName" />
                                }
                                else
                                {
                                    <img src="~/Images/default_user.png" class="img-circle" style="height:2rem" />
                                }

                                @item.UserName
                            </a>
                        </div>
                        <div class="col-12">
                            <br />
                            <i class="fas fa-clock"></i>
                            Published on: @item.PublishDate
                        </div>
                    </div>
                    <hr />
                    <div class="row text-center text-sm">
                        <div class="col">
                            <i class="fas fa-thumbs-up"></i> @item.Likes
                        </div>
                        <div class="col">
                            <i class="fas fa-eye"></i> @item.Views
                        </div>
                        <div class="col">
                            <i class="fas fa-comments"></i> @item.Comments
                        </div>
                    </div>
                    <hr />
                    <p class="card-text text-sm">
                        @item.Content&hellip;
                    </p>
                </div>
                <a href="@Url.Action("Index","Blog", new { Url = item.URL })">
                    <div class="card-footer text-center">
                        View Full Blog
                    </div>
                </a>
            </div>
        </div>
    }

