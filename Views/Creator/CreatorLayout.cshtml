<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title | @ViewBag.SoftwareName</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">

    @Styles.Render("~/css/main")
    <script type="text/javascript" src="~/Scripts/main.js"></script>
    <!-- Ionicons -->
    @*<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">*@

    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    @RenderSection("head", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed @ViewBag.sidebar_collapse">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark navbar-cyan fixed-top">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item">

                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">

                <!-- Notifications Dropdown Menu -->
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("AddBlog")" data-toggle="tooltip" data-placement="bottom" title="Add New Blog">
                        New Blog
                        <i class="fas fa-plus-circle"></i>
                    </a>
                </li>
                
                <li class="nav-item dropdown user-menu">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                        @{
                            if (ViewBag.ImgUrl == null)
                            {
                                <img src="~/Images/default_user.png" class="user-image img-circle elevation-2" alt="User Image">
                            }
                            else
                            {
                                <img src="~/Images/UserProfiles/@ViewBag.ImgUrl" class="user-image img-circle elevation-2" alt="@ViewBag.UserName">
                            }
                        }

                        <span class="d-none d-md-inline">@ViewBag.Name</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <!-- User image -->
                        <li class="user-header">
                            @{
                                if (ViewBag.ImgUrl == null)
                                {
                                    <img src="~/Images/default_user.png" class="img-circle elevation-2" alt="User Image">
                                }
                                else
                                {
                                    <img src="~/Images/UserProfiles/@ViewBag.ImgUrl" class="img-circle elevation-2" alt="@ViewBag.UserName">
                                }
                            }
                            <p>
                                @ViewBag.Name
                                <small>@@@ViewBag.UserName</small>
                            </p>
                        </li>
                        <!-- Menu Body -->
                        <li class="user-body">
                            <div class="row">
                                <div class="col-6 text-center">
                                    <a href="#">
                                        Followers
                                        <br />
                                        @ViewBag.Followers
                                    </a>
                                </div>
                                <div class="col-6 text-center">
                                    <a href="#">
                                        Blogs
                                        <br />
                                        @ViewBag.Blogs
                                    </a>
                                </div>
                                <div class="col-12">
                                    <a href="@Url.Action("Index","Home")" class="btn btn-sm btn-info btn-block">Back to home</a>
                                </div>
                            </div>
                            <!-- /.row -->
                        </li>
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <a href="#" class="btn btn-default btn-flat">Profile</a>
                            <a href="#" class="btn btn-default btn-flat float-right">Sign out</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-light-info elevation-2">
            <!-- Brand Logo -->
            <a href="@Url.Action("Index","Creator")" class="brand-link">
                <img src="~/Images/logo-solid.jpg" alt="@ViewBag.SoftwareName" class="brand-image img-circle">
                <span class="brand-text font-weight-light">@ViewBag.SoftwareName</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column text-sm nav-flat" data-widget="treeview" role="menu" data-accordion="false">
                        
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Creator")" class="nav-link @ViewData["Home"]">
                                <i class="nav-icon fas fa-home"></i>
                                <p>
                                    Home
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="@Url.Action("MyBlogs","Creator")" class="nav-link @ViewData["My_Blogs"]">
                                <i class="nav-icon fas fa-bookmark"></i>
                                <p>
                                    My Blogs
                                </p>
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a href="@Url.Action("Advertisements","Creator")" class="nav-link @ViewData["My_Advertisements"]">
                                <i class="nav-icon fas fa-bookmark"></i>
                                <p>
                                    My Advertisements
                                </p>
                            </a>
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper mt-4">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>@ViewBag.Title</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index","Creator")">Home</a></li>
                                @Html.Raw(ViewBag.BreadCrums)
                                <li class="breadcrumb-item active">@ViewBag.Title</li>
                            </ol>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- ./wrapper -->

    @Scripts.Render("~/js/main")
    <script type="text/javascript" src="~/Scripts/popper.js"></script>
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
    @RenderSection("scripts", required: false)

</body>
</html>
